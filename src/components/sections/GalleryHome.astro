---
import TagH2 from "@/components/global/TagH2.astro"

interface Props {
    texts: {
        TITLE: string;
        DESCRIPTION: string;
        BUTTON: string;
    }
}

const { texts } = Astro.props;
---

<section class="text-center">
    <TagH2 class="py-20 max-w-3xl mx-auto">{texts.TITLE}</TagH2>
    <div class="relative overflow-hidden md:overflow-visible">
        <div class="grid grid-cols-9 grid-rows-2 gap-2 md:gap-4 h-100 lg:h-[45rem] w-170 sm:w-200 md:w-full max-w-none md:max-w-full">
            <div class="rounded-lg bg-zinc-300 col-span-2"></div>
            <div class="rounded-lg bg-zinc-300 col-span-2 col-start-3"></div>
            <div class="rounded-lg bg-zinc-300 col-span-2 col-start-5"></div>
            <div class="rounded-lg bg-zinc-300 col-span-3 col-start-7"></div>
            <div class="rounded-lg bg-zinc-300 col-span-3 row-start-2"></div>
            <div class="rounded-lg bg-zinc-300 col-span-4 col-start-4 row-start-2"></div>
            <div class="rounded-lg bg-zinc-300 col-span-2 col-start-8 row-start-2"></div>
        </div>
        <button class="absolute bg-white text-base shadow border border-black rounded-full px-6 md:px-10 py-3 md:py-4 top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 hover:bg-cyan-600 hover:text-white transition-all cursor-pointer font-semibold">
            {texts.BUTTON}
        </button>
    </div>
</section>